# load data to scoreboards
execute as @a at @a store result score @s statusHotbarX run data get entity @s Pos[0]
execute as @a at @a store result score @s statusHotbarY run data get entity @s Pos[1]
execute as @a at @a store result score @s statusHotbarZ run data get entity @s Pos[2]
execute as @a store result score @s statusHotbarR run data get entity @s Rotation[0]
execute as @a store result score @s statusHotbarH run time query daytime
execute as @a store result score @s statusHotbarM run time query daytime
execute as @a store result score @s statusHotbarD run time query day

# pad time
scoreboard players operation @a statusHotbarH /= $statusHotbarHC statusHotbarH
scoreboard players add @a statusHotbarH 9
scoreboard players operation @a statusHotbarH %= $statusHotbarHD statusHotbarH
scoreboard players operation @a statusHotbarM *= $statusHotbarMH statusHotbarM
scoreboard players operation @a statusHotbarM /= $statusHotbarHC statusHotbarH
scoreboard players operation @a statusHotbarM %= $statusHotbarMH statusHotbarM
execute as @a if score @s statusHotbarH < $statusHotbarDS statusHotbarH run scoreboard players add @s statusHotbarD 1

# pad rotation
execute as @a run scoreboard players add @s statusHotbarR 225
execute as @a run scoreboard players operation @s statusHotbarR /= $statusHotbarRA statusHotbarR
execute as @a if score @s statusHotbarR matches 4 run scoreboard players set @s statusHotbarR 0

